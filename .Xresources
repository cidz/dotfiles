
! Disable the scrollbar
URxvt.scrollstyle:	rxvt
URxvt.scrollBar:	false

! FONTS
Xft*dpi:		96
Xft*antialias:		true
Xft*hinting:		full
URxvt.font:		xft:PragmataPro:size=12:antialias:true:hinting:full
URxvt.Boldfont:		xft:PragmataPro-Bold:bold:size=12:antialias:true:hinting:full
URxvt.letterSpace: 	-1

! PERLS
URxvt.perl-ext-common:	default,clipboard,matcher,keyboard-select
URxvt.keysm.M-u:	perl:url-select:select_next
URxvt.url-launcher:	/usr/bin/firefox
URxvt.underlineURLs:	true
URxvt.matcher.button:	1
URxvt.keysym.M-Escape:	perl:keyboard-select:activate
URxvt.keysym.M-c:	perl:clipboard:copy
URxvt.keysym.M-v:	perl:clipboard:paste
URxvt.keysym.M-C-v:	perl:clipboard:paste_escaped
URxvt.copyCommand:	xsel -ib
URxvt.pasteCommand:	xsel -ob
URxvt.clipboard.autocopy:true

! COLORS
URxvt*background: #000000
URxvt*foreground: #B2B2B2

! black
 *color0:  #2E3436
 *color8:  #555753
! red
  *color1:  #a40000
  *color9:  #EF2929
! green
  *color2:  #4E9A06
  *color10: #8AE234
! yellow
  *color3:  #C4A000
  *color11: #FCE94F
! blue
  *color4:  #3465A4
  *color12: #729FCF
! purple
  *color5:  #75507B
  *color13: #AD7FA8
! orange (replaces cyan)
  *color6:  #ce5c00
  *color14: #fcaf3e
! white
  *color7:  #babdb9
  *color15: #EEEEEC
